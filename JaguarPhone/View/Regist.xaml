<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:JaguarPhone.ViewModel"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:jaguarLibraryControls="clr-namespace:JaguarLibraryControls;assembly=JaguarLibrary"
        xmlns:Enums="clr-namespace:JaguarPhone.Module.Enums"
        x:Class="JaguarPhone.View.Regist"
        mc:Ignorable="d"
        Title="Regist" Height="800" Width="600" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ObjectDataProvider x:Key="telModel" MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Enums:TelModel"></x:Type>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="275*"/>
        </Grid.RowDefinitions>

        <jaguarLibraryControls:TextBoxWater HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" WaterMark="Ім'я" Height="17" WaterMarkEnabled="True" Text="" Name="firstNameRegist"/>
        <jaguarLibraryControls:TextBoxWater HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="17" WaterMark="По батькові" Name="lastNameRegist"/>
        <jaguarLibraryControls:TextBoxWater HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="17" WaterMark="Телефон" Name="telephoneRegist"/>
        <ComboBox HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Width="120" Text="Модель телефону" SelectedIndex="0" Name="telModelRegist" ItemsSource="{Binding Source={jaguarLibraryControls:EnumBindingSource {x:Type Enums:TelModel}}}" />
        <Label Content="Марка телефону" HorizontalAlignment="Center" Margin="0,46,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Button Content="Зареєструватись" HorizontalAlignment="Center" Grid.Row="7" VerticalAlignment="Center" Height="30" Width="100" Click="Regist_Click"/>
        <PasswordBox HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Width="120" Name="passwordOneRegist" PasswordChar="●" RenderTransformOrigin="0.5,0.5"/>
        <PasswordBox HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Width="120" Name="passwordTwoRegist"/>

    </Grid>
</Window>
