<UserControl x:Class="JaguarPhone.View.Controls.AllUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:module="clr-namespace:JaguarPhone.Module"
             xmlns:viewModel="clr-namespace:JaguarPhone.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="750" d:DesignWidth="1600">
    <UserControl.DataContext>
        <viewModel:Jaguar />
    </UserControl.DataContext>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="39*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="12*" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="17*"/>
                <RowDefinition Height="12*" />
                <RowDefinition Height="84*" />
                <RowDefinition Height="18*"/>
            </Grid.RowDefinitions>
            <Label Content="Залишки" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="113" />

            <Grid Grid.Row="4" Height="420" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="51*" />
                    <ColumnDefinition Width="58*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="71*" />
                    <RowDefinition Height="71*" />
                    <RowDefinition Height="71*" />
                    <RowDefinition Height="71*" />
                    <RowDefinition Height="71*"/>
                    <RowDefinition Height="71*" />
                </Grid.RowDefinitions>
                <Label Content="Інтернет (ГБ)" HorizontalAlignment="Left" VerticalAlignment="Center" Height="34"
                       Width="136" Margin="110,0,0,0" />
                <Label Grid.Column="1"  HorizontalAlignment="Left"
                       Margin="15,0,0,0" VerticalAlignment="Center" Content="{Binding CurUser.Account.GbInternet, Mode=OneWay}" />
                <Label Content="Дзвінки Ягуар" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center"
                       Margin="104,0,0,0" />
                <CheckBox Grid.Column="1" HorizontalAlignment="Left"
                          Margin="15,0,0,0" Grid.Row="1" VerticalAlignment="Center" IsChecked="{Binding CurUser.Account.CallsJaguar}" />
                <Label Content="Дзвінки на інші мобільні" HorizontalAlignment="Left" Grid.Row="2"
                       VerticalAlignment="Center" Margin="3,0,0,0" />
                <Label Grid.Column="1" Content="{Binding CurUser.Account.CallsOther}" HorizontalAlignment="Left"
                       Margin="15,0,0,0" Grid.Row="2" VerticalAlignment="Center" />
                <Label Content="СМС" HorizontalAlignment="Left" Margin="187,0,0,0" Grid.Row="4"
                       VerticalAlignment="Center"/>
                <Label Content="ТВ" HorizontalAlignment="Left" Margin="205,0,0,0" Grid.Row="5"
                       VerticalAlignment="Center" />
                <Label Grid.Column="1" Content="{Binding CurUser.Account.Sms}" HorizontalAlignment="Left" Margin="15,0,0,0"
                       Grid.Row="4" VerticalAlignment="Center"/>
                <CheckBox Grid.Column="1" HorizontalAlignment="Left" Margin="15,0,0,0"
                       Grid.Row="5" VerticalAlignment="Center" IsChecked="{Binding CurUser.Account.Tv}" />
                <Label Content="Суперсила" HorizontalAlignment="Left" Margin="128,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
                <Grid Grid.Column="1" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="193*"/>
                        <ColumnDefinition Width="140*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="superPower_cb" ItemsSource="{Binding CurUser.Account.ListSuperpower}" SelectedItem="{Binding CurUser.TSuperPower}" Margin="15,15,15,15" VerticalAlignment="Center" IsEnabled="{Binding CurUser.AvailableSP}"/>
                    <Button Grid.Column="1" x:Name="selectSP_bn" Content="Змінити" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SelectSuperpower_Click" IsEnabled="{Binding CurUser.AvailableSP}"/>
                </Grid>
            </Grid>
            <Label x:Name="nameTariff_lbl" Content="{Binding CurUser.Account.Name, Mode=OneWay}" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" />
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="112*"/>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="317*"/>
                    <ColumnDefinition Width="123*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Ціна" Margin="49,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <Label x:Name="price_lbl" Content="{Binding CurUser.Account.Price}" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  />
                <Label Content="Наступна плата по тарифу"
                    VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,0" />
                <Label Content="{Binding CurUser.DateTariff}"
                    VerticalAlignment="Center" Grid.Column="3"/>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120*"/>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="229*"/>
                    <ColumnDefinition Width="207*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Баланс" Margin="35,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label x:Name="balance_lbl" Content="{Binding CurUser.Balance}" HorizontalAlignment="Center"
                       VerticalAlignment="Center" RenderTransformOrigin="1.333,0.567" Grid.Column="1" />


                <TextBox x:Name="topUp_tb" Margin="0,0,10,0" TextWrapping="Wrap"
                         VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Right"/>
                <Border Style="{StaticResource Shadow}" Grid.Column="3" Margin="5,0,0,0">

                    <Button Content="Поповнити" Click="TopUp_Click" HorizontalAlignment="Center" VerticalAlignment="Center">
                    </Button>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.ColumnSpan="2" Margin="615,10,10,-10">
            <Grid.RowDefinitions>
                <RowDefinition Height="17*"/>
                <RowDefinition Height="133*"/>
            </Grid.RowDefinitions>
            <Label Content="Доступні тарифи саме для вас" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
            <Grid Grid.Row="1" Margin="50,50,50,50" VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="itemTariff_itemsControl"  ItemsSource="{Binding AllTariffs, Mode=OneWay}" IsEnabled="{Binding CurUser.AvailableTariffs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="tariffItem_gd" Margin="20,20,20,20" VerticalAlignment="Top" MouseEnter="tariffItem_gd_MouseEnter" ToolTip="{Binding Name, Mode=OneWay}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label x:Name="currentTariffName_lbl" Grid.Row="0" Grid.Column="1" Content="{Binding Name}"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"
                                   Margin="0,0,0,25" />
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Row="1" Grid.Column="0" Content="{Binding GbInternet}"
                                       HorizontalContentAlignment="Center" />
                                        <Label Grid.Row="2" Grid.Column="0" Content="{Binding CallsOther}"
                                       HorizontalAlignment="Center" />
                                        <CheckBox Grid.Row="3" Grid.Column="0" IsEnabled="{Binding CallsJaguar}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        <Label Grid.Row="4" Grid.Column="0" Content="{Binding Sms}"
                                       HorizontalContentAlignment="Center" />
                                        <CheckBox Grid.Row="5" Grid.Column="0" IsEnabled="{Binding Tv}"
                                          VerticalAlignment="Center" HorizontalAlignment="Center" />

                                        <Label Grid.Row="1" Grid.Column="1" Content="ГБ інтернету" HorizontalAlignment="Left" />
                                        <Label Grid.Row="2" Grid.Column="1" Content="хв на інші мобільні" HorizontalAlignment="Left" />
                                        <Label Grid.Row="3" Grid.Column="1" Content="Дзвінки JaguarPhone"
                                       HorizontalAlignment="Left" />
                                        <Label Grid.Row="4" Grid.Column="1" Content="CМС повідомлень"
                                       HorizontalAlignment="Left" />
                                        <Label Grid.Row="5" Grid.Column="1" Content="Телебачення" HorizontalAlignment="Left" />
                                    </Grid>
                                    <Grid Grid.Row="2" Margin="0,25,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Суперсили" HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom">
                                        </Label>
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding ListSuperpower, Mode=OneWay}"
                                              FontSize="22" FontFamily="Times New Roman" />
                                    </Grid>
                                    <Grid Grid.Row="3" Margin="0,35,0,0" HorizontalAlignment="Left"  >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="18*"/>
                                            <ColumnDefinition Width="31*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Margin="80,0,0,0" HorizontalAlignment="Right" Content="{Binding Price, Mode=OneWay}" VerticalAlignment="Center" Height="36" Width="32" FontSize="18"/>
                                        <Label Grid.Column="1" Content="грн \ 4 місяці" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="133" FontSize="18"/>
                                    </Grid>
                                    <Button x:Name="connectTariff_bn"  Content="Підключити" Grid.Row="4" Margin="0,0,0,25" Click="ConnectTariff_Click" AutomationProperties.HelpText="{Binding Name, Mode=OneWay}">
                                        <Button.Triggers>
                                            
                                        </Button.Triggers>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                    </ItemsControl>
                </ScrollViewer>
